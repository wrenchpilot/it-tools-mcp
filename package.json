{
  "name": "it-tools-mcp",
  "version": "3.0.0",
  "description": "MCP server providing access to various IT tools and utilities for developers",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "it-tools-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "test": "node tests/test-server.mjs",
    "docker:build": "docker buildx build --platform linux/amd64,linux/arm64 --provenance=true --sbom=true -t it-tools-mcp .",
    "docker:build:local": "docker build -t it-tools-mcp .",
    "docker:run": "docker run -i --rm it-tools-mcp",
    "docker:dev": "docker-compose up --build it-tools-mcp-dev",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.prod.yml down",
    "deploy:build": "npm run build && docker buildx build --platform linux/amd64,linux/arm64 --provenance=true --sbom=true -t it-tools-mcp:latest .",
    "deploy:prod": "npm run deploy:build && docker-compose -f docker-compose.prod.yml up -d"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "it-tools",
    "developer-tools",
    "utilities",
    "docker",
    "encoding",
    "hashing",
    "text-processing",
    "network-tools"
  ],
  "author": "wrenchpilot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wrenchpilot/it-tools-mcp.git"
  },
  "homepage": "https://github.com/wrenchpilot/it-tools-mcp#readme",
  "bugs": {
    "url": "https://github.com/wrenchpilot/it-tools-mcp/issues"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/figlet": "^1.7.0",
    "@types/html-to-text": "^9.0.4",
    "@types/marked": "^5.0.2",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.15.32",
    "@types/speakeasy": "^2.0.10",
    "@types/validator": "^13.15.2",
    "@types/xml-formatter": "^1.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@types/js-yaml": "^4.0.9",
    "@types/papaparse": "^5.3.16",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^3.0.2",
    "bip39": "^3.1.0",
    "color": "^5.0.0",
    "cron-parser": "^5.3.0",
    "diff": "^8.0.2",
    "emoji-js": "^3.8.1",
    "figlet": "^1.8.1",
    "html-to-text": "^9.0.5",
    "iban": "^0.0.14",
    "js-yaml": "^4.1.0",
    "libphonenumber-js": "^1.12.9",
    "marked": "^15.0.12",
    "mathjs": "^14.5.2",
    "mime-types": "^3.0.1",
    "papaparse": "^5.5.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "sql-formatter": "^15.6.5",
    "turndown": "^7.2.0",
    "ulid": "^3.0.1",
    "validator": "^13.15.15",
    "xml-formatter": "^3.6.6",
    "zod": "^3.25.67"
  }
}
